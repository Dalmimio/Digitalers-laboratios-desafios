import java.util.Scanner;

public class ejercicio2 {
	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		int num1, num2, opcion;
		
		System.out.print("Ingrese un número: ");
		num1 = teclado.nextInt();
		
		System.out.print("Ingrese otro número: ");
		num2 = teclado.nextInt();
		
		System.out.print("¿Qué quieres hacer?:\n1) Suma\n2) Resta\n3) Producto\n4) División");
		opcion = teclado.nextInt();
		
		switch (opcion) {
		case 1: System.out.print("Resultado de la suma: " + (num1+num2));
			break;
		case 2: System.out.print("Resultado de la resta: " + (num1-num2));
			break;
		case 3: System.out.print("Resultado del producto: " + (num1*num2));
			break;
		case 4: System.out.print("Resultado de la división: "+ (num1/num2));
			break;
		}
	}
}
